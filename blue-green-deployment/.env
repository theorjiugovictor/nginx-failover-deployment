# Blue/Green Docker Images
BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two

# Active Pool Configuration (blue or green)
ACTIVE_POOL=blue

# Release Identifiers
RELEASE_ID_BLUE=blue-release-2025-01-15
RELEASE_ID_GREEN=green-release-2025-01-15

# Application Port (default: 3000)
PORT=3000

SLACK_WEBHOOK_URL=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Alert Thresholds
ERROR_RATE_THRESHOLD=2.0
WINDOW_SIZE=200
ALERT_COOLDOWN_SEC=300

# Maintenance Mode (set to 'true' to suppress alerts)
MAINTENANCE_MODE=false
